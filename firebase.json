{
  "hosting": {
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
     } ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200",
        "Set-Cookie": "HttpOnly;Secure;SameSite=Strict"
      } ]
    }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
